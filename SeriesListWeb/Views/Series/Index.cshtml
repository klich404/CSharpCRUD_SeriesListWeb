@model IEnumerable<Series>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Series List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Series" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Serie
            </a>
        </div>
    </div>
</div>
<br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Genre
            </th>
            <th>
                Watch?
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="35%">
                    @obj.Name
                </td>
                <td width="25%">
                    @obj.Genre
                </td>
                <td width="15%">
                    @if(obj.Watch == true)
                    {
                        <p>Yes</p>
                    }
                    @if(obj.Watch == false)
                    {
                        <p>No</p>
                    }
            </td>
                <td>
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="Series" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                    <div class="w-50 btn-group" role="group" style="float: left">
                        <a asp-controller="Series" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
